{{# fname_required }}{{! if we don't need the fname, hide the whole name cell }}
						<tr>
							<td>
								<input class="halfwidth" name="fname" value="{{ fname }}" type="text" placeholder="{{ l10n "donate_interface-donor-fname" }}" id="fname" required><input class="halfwidth" name="lname" value="{{ lname }}" type="text" placeholder="{{ l10n "donate_interface-donor-lname" }}" id="lname" required>
							</td>
						</tr>
{{/ fname_required }}
{{# address_required }}
						<tr>
							<td>
								<input class="fullwidth" name="street" value="{{ street }}" type="text" title="{{ l10n "donate_interface-donor-street" }}" placeholder="{{ l10n "donate_interface-donor-street" }}" id="street" required>
							</td>
						</tr>
						<tr>
							<td>
{{# city_required }}
								<input class="{{ address_css_class }}" name="city" value="{{ city }}" type="text" placeholder="{{ l10n "donate_interface-donor-city" }}" id="city" required>
{{/ city_required }}
{{# state_required }}
								<select class="{{ address_css_class }}" name="state" value="{{ state }}" placeholder="{{ l10n "donate_interface-donor-state" }}" id="state" required>
	{{# state_options }}
									<option value="{{ abbr }}">{{ name }}</option>
	{{/ state_options }}
								</select>
{{/ state_required }}
{{# postal_code_required }}
								<input class="{{ address_css_class }}" name="zip" value="{{ zip }}" type="text" placeholder="{{ l10n "donate_interface-donor-postal" }}" id="zip" required>
{{/ postal_code_required }}
							</td>
						</tr>
{{/ address_required }}
